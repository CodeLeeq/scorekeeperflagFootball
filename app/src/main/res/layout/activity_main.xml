<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/one_extrapoint_btn2"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginEnd="36dp"
        android:background="@android:color/background_light"
        android:onClick="teamYellowAddOne"
        android:text="@string/one_extra_point"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/one_extrapoint_btn"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/red_score"
        android:layout_width="29dp"
        android:layout_height="53dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="18dp"
        android:text="@string/number"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red_name"
        tools:text="0" />

    <TextView
        android:id="@+id/yellow_score"
        android:layout_width="29dp"
        android:layout_height="52dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="80dp"
        android:text="@string/number"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yellow_name" />

    <Button
        android:id="@+id/td_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/background_light"
        android:onClick="teamRedAddSix"
        android:text="@string/td"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red_score" />

    <Button
        android:id="@+id/one_extrapoint_btn"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/background_light"
        android:onClick="teamRedAddOne"
        android:text="@string/one_extra_point"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/td_button" />

    <Button
        android:id="@+id/two_extrapoint_btn"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/background_light"
        android:onClick="teamRedAddTwo"
        android:text="@string/two_extra_points"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/one_extrapoint_btn" />

    <Button
        android:id="@+id/two_extrapoint_btn2"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginEnd="36dp"
        android:background="@android:color/background_light"
        android:onClick="teamYellowAddTwo"
        android:text="@string/two_extra_points"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/two_extrapoint_btn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/fg2"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginEnd="36dp"
        android:background="@android:color/background_light"
        android:onClick="teamYellowAddFg"
        android:text="@string/field_goal"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/fg"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/fg"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/background_light"
        android:onClick="teamRedAddFg"
        android:text="@string/field_goal"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two_extrapoint_btn" />

    <Button
        android:id="@+id/safety_btn"
        android:layout_width="145dp"
        android:layout_height="47dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/background_light"
        android:onClick="teamRedAddSg"
        android:text="@string/safety"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fg" />

    <Button
        android:id="@+id/safety_btn2"
        android:layout_width="145dp"
        android:layout_height="47dp"
        android:layout_marginEnd="36dp"
        android:background="@android:color/background_light"
        android:onClick="teamYellowAddSg"
        android:text="@string/safety"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/safety_btn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/ylw_td_btn"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginEnd="36dp"
        android:background="@android:color/background_light"
        android:onClick="teamYellowAddSix"
        android:text="@string/td"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/td_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:background="@android:color/background_light"
        android:onClick="ResetAllScore"
        android:text="@string/reset"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/red_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="@string/team_red"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yellow_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:text="@string/team_yellow"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>